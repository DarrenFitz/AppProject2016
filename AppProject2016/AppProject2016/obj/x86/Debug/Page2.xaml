<Page
    x:Class="AppProject2016.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppProject2016"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Image Source="Assets/map.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30,10,50,0" Height="180" Width="300" Stretch="Uniform" />
        </Grid>

        <Grid Grid.Row="2">
            <Button x:ConnectionId='2' x:Name="button" 
                Content="Map" 
                HorizontalAlignment="Center" 
                Margin="80,20,80,0" 
                VerticalAlignment="Top" 
                Height="50" 
                Width="200" 
                                    />

            <Button x:ConnectionId='3' x:Name="button1" 
                Content="Download Maps" 
                HorizontalAlignment="Center" 
                Margin="80,100,80,0" 
                VerticalAlignment="Top" 
                Height="50" Width="200" 
                                     />
        </Grid>

        <Grid Grid.Row="0">
            <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" FontSize="32" Text="Map" TextAlignment="Center" Foreground="LightBlue" VerticalAlignment="Top" Width="200" Height="43"/>
        </Grid>



    </Grid>
</Page>

