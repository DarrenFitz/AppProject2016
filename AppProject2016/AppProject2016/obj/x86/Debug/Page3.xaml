<Page
    x:Class="AppProject2016.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppProject2016"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' HorizontalAlignment="left" 
                VerticalAlignment="Top"
                Background="Green"
                Margin="20,75,0,0" 
                Height="75" 
                Width="150" 
                x:Name="BtnCapture"  
                                        >
            <Image Source="Assets/photo.png" Height="50" Width="50"/>
        </Button>

        <Button x:ConnectionId='2' HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Background="Red"
                Margin="190,75,0,0" 
                Height="75" 
                Width="150" 
                x:Name="BtnImages"  
                                       >
            <Image Source="Assets/video.png" Height="50" Width="50"/>
        </Button>

        <Image x:ConnectionId='3' x:Name="imageControl" Width="200" Height="200"/>
        <MediaElement x:ConnectionId='4' x:Name="mediaElement" HorizontalAlignment="Center" Margin="0,200,0,0" Width="320" Height="240" AreTransportControlsEnabled="True"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Center" FontSize="28" Margin="0,25,0,0" TextWrapping="Wrap" Text="Camera" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>

