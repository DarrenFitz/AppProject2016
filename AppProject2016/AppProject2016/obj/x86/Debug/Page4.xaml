<Page
    x:Class="AppProject2016.Page4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppProject2016"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBox x:ConnectionId='1' HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,20,0,0" Width="340" x:Name="TextBox" FontWeight="Bold"/>
        <TextBox x:ConnectionId='2' HorizontalAlignment="Center" x:Name="ValuText" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,52,0,0" Width="340"/>
        <Button x:ConnectionId='3' Background="LightBlue" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" Height="70" Width="70" x:Name="BtnPlus"                       />
        <Button x:ConnectionId='4' Background="LightBlue" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0" Height="70" Width="70" x:Name="BtnMinus"                       />
        <Button x:ConnectionId='5' Background="LightBlue" Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,100,0,0" Height="70" Width="70" x:Name="BtnMulti"                       />
        <Button x:ConnectionId='6' Background="LightBlue" Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,100,0,0" Height="70" Width="70" x:Name="BtnDiv"                     />
        <Button x:ConnectionId='7' Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0" Height="70"  Width="70" x:Name="Btn1"                   />
        <Button x:ConnectionId='8' Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,180,0,0" Height="70" Width="70" x:Name="Btn2"                   />
        <Button x:ConnectionId='9' Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,180,0,0" Height="70" Width="70" x:Name="Btn3"                   />
        <Button x:ConnectionId='10' Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,260,0,0" Height="70" Width="70" x:Name="Btn4"                   />
        <Button x:ConnectionId='11' Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,260,0,0" Height="70" Width="70" x:Name="Btn5"                   />
        <Button x:ConnectionId='12' Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,260,0,0" Height="70" Width="70" x:Name="Btn6"                   />
        <Button x:ConnectionId='13' Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,340,0,0" Height="70" Width="70" x:Name="Btn7"                   />
        <Button x:ConnectionId='14' Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,340,0,0" Height="70" Width="70" x:Name="Btn8"                   />
        <Button x:ConnectionId='15' Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,340,0,0" Height="70" Width="70" x:Name="Btn9"                   />
        <Button x:ConnectionId='16' Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,420,0,0" Height="70" Width="70" x:Name="Btn0"                   />
        <Button x:ConnectionId='17' Content="." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,420,0,0" Height="70" Width="70" x:Name="BtnDot"                     />
        <Button x:ConnectionId='18' Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,420,0,0" Height="70" Width="70" x:Name="BtnCan"                     />
        <Button x:ConnectionId='19' Background="LimeGreen" Content="=" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,340,0,0" Height="150" Width="70" x:Name="BtnEqual"                       />
        <Button x:ConnectionId='20' Background="LightBlue" Content="%" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,180,0,0" Height="70" Width="70" x:Name="BtnPer"                     />
        <Button x:ConnectionId='21' Background="Orange" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,260,0,0" Height="70" Width="70"                     />
    </Grid>
</Page>

